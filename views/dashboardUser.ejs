<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Dashboard</title>
</head>
<body>
  <%- include('header') %>

  <main style="padding: 16px;">
    <h2>Dashboard User</h2>

    <% if (success) { %><p style="color: green;"><%= success %></p><% } %>
    <% if (error) { %><p style="color: red;"><%= error %></p><% } %>

    <% const currency = userData && userData.Profile ? userData.Profile.currency : 'IDR'; %>

    <p>Total Budget Bulanan: <strong><%= helpers.formatCurrency(userData && userData.Profile ? userData.Profile.monthlyBudget : 0, currency) %></strong></p>
    <p>Total Terpakai: <strong><%= helpers.formatCurrency(totalSpent, currency) %></strong></p>

    <div style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-bottom: 8px;">
      <p style="margin: 0;">Sisa Budget: <strong><%= helpers.formatCurrency(remainingBudget, currency) %></strong></p>
      <button type="button" id="toggleTopup">Top Up</button>
    </div>

    <form id="topupForm" action="/homes/topup" method="post" style="display: none; margin-bottom: 12px;">
      <input type="number" name="amount" min="1" placeholder="Nominal top up" required>
      <button type="submit">Submit Top Up</button>
    </form>

    <p><a href="/homes/export/pdf">Export PDF</a></p>
      <p><a href="/merchants"><button>Tambah Investasi?</button></a></p>

    <h3>Riwayat Transaksi</h3>

    <% if (transactions && transactions.length) { %>
      <table border="1" cellpadding="6" cellspacing="0" style="width: 100%;">
        <tr>
          <th>Tanggal</th>
          <th>Merchant</th>
          <th>Qty</th>
          <th>Amount</th>
        </tr>
        <% transactions.forEach((el) => { %>
          <tr>
            <td><%= new Date(el.createdAt).toLocaleString('id-ID') %></td>
            <td><%= el.Merchants && el.Merchants.length ? el.Merchants.map((m) => m.name).join(', ') : '-' %></td>
            <td><%= el.quantity || 1 %></td>
            <td><%= el.formattedAmount %></td>
          </tr>
        <% }) %>
      </table>
    <% } else { %>
      <p>Belum ada transaksi.</p>
    <% } %>
  </main>

  <script>
    const topupButton = document.getElementById('toggleTopup');
    const topupForm = document.getElementById('topupForm');

    if (topupButton && topupForm) {
      topupButton.addEventListener('click', () => {
        topupForm.style.display = topupForm.style.display === 'none' ? 'block' : 'none';
      });
    }
  </script>
</body>
</html>
