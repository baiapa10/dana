<nav style="padding: 14px 18px; border-bottom: 1px solid #dbeafe; margin-bottom: 18px; background: #ffffff; box-shadow: 0 3px 10px rgba(15, 23, 42, 0.04); display: flex; align-items: center; flex-wrap: wrap; gap: 10px;">
  <a href="/" style="margin-right: 12px; text-decoration: none; color: #1d4ed8; font-weight: 600;">Landing</a>
  <% const role = currentUser && currentUser.role ? String(currentUser.role).toLowerCase() : ''; %>
  <% const isMerchant = role === 'merchant'; %>
  <% const isUser = role === 'user'; %>
  <% if (currentUser) { %>
    <a href="/homes" style="margin-right: 12px; text-decoration: none; color: #334155;">Dashboard</a>
    <% if (isMerchant) { %>
      <a href="/merchants" style="margin-right: 12px; text-decoration: none; color: #334155;">Merchants</a>
      <a href="/merchants/add" style="margin-right: 12px; text-decoration: none; color: #334155;">Add Merchant</a>
      <a href="/users" style="margin-right: 12px; text-decoration: none; color: #334155;">Users</a>
    <% } %>
    <% if (isUser) { %>
      <a href="/merchants" style="margin-right: 12px; text-decoration: none; color: #334155;">Add Transaction</a>
    <% } %>
    <span style="margin-right: 6px; margin-left: auto; color: #475569; font-size: 14px;">Hi, <%= currentUser.name %> </span>
    <span>
      <a href="/logout" style="text-decoration: none; background: #ef4444; color: #ffffff; padding: 7px 12px; border-radius: 9px; font-size: 14px; font-weight: 600;">Logout</a>
    </span>
  <% } else { %>
    <a href="/register" style="margin-right: 4px; text-decoration: none; color: #334155;">Register</a>
    <a href="/login" style="text-decoration: none; color: #ffffff; background: #1d4ed8; padding: 7px 12px; border-radius: 9px; font-weight: 600;">Login</a>
  <% } %>
</nav>
